<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.detyra1_ai.latin_square.LatinSquareController" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #f4f4f9;">
    <children>
        <VBox alignment="CENTER" spacing="10.0" layoutX="50.0" layoutY="20.0" prefWidth="500.0">
            <Label text="Latin Square Generator" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" alignment="CENTER"/>
            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Enter n:" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
                <TextField fx:id="sizeInput" promptText="Positive Integer" prefWidth="120.0" style="-fx-font-size: 14px;"/>
                <Button text="Generate" onAction="#generateLatinSquare" style="-fx-font-size: 14px; -fx-background-color: #0066cc; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            </HBox>
            <Label fx:id="errorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" visible="false" alignment="CENTER"/>
            <TextArea fx:id="outputArea" prefWidth="480.0" prefHeight="300.0" editable="false" wrapText="true" style="-fx-font-size: 14px; -fx-control-inner-background: #f9f9f9; -fx-border-color: #ccc;"/>
        </VBox>
    </children>
</AnchorPane>
